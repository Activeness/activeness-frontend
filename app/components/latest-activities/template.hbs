<div class="latest-activities">
    
    {{#each latestActivityViews as |activity|}}
        <a {{action 'openActivityDetails' activity.id}} class="latest-activity">
            <div class="latest-activity-image" style="background-image: url({{activity.img}});"></div>
            <p class="latest-activity-title">{{activity.title}}</p>
            <p class="latest-activity-date">{{format-date activity.date}}</p>
        </a>
    {{/each}}
    
    {{yield}}

</div>
